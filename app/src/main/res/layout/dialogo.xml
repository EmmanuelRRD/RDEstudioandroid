<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/caja_idestudio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Identificador"
        android:inputType="text" />

    <EditText
        android:id="@+id/caja_nombre"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Nombre del estudio"
        android:inputType="text" />

    <EditText
        android:id="@+id/caja_direccion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Direccion"
        android:inputType="text" />

    <EditText
        android:id="@+id/caja_descripcion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Ventajas"
        android:inputType="text" />


    <EditText
        android:id="@+id/encargado"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Encargado"
        android:inputType="text" />

    <EditText
        android:id="@+id/caja_usuario_responsable"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Jefe directo"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFB300"
        android:text="AGREGAR"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFB300"
        android:text="CANCELAR"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
